<div class="row">
  <%- if controller_name != 'sessions' %>
    <div class="col-6 d-grid">
      <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-outline-info" %><br />
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="col-6 d-grid">
      <%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-outline-warning" %><br />
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="col-6 d-grid">
      <%= link_to "パスワードが忘れた場合", new_password_path(resource_name), class: "btn btn-outline-dark" %><br />
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="col-12 d-grid">
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-outline-danger" %><br />
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="col-12 d-grid">
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-outline-secondary" %><br />
    </div>
  <% end %>
</div>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
  <% end %>
<% end %>
