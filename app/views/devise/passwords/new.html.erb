<% provide(:title,"パスワードをリカバリ") %>
<div class="row justify-content-xl-center" id="register-card">
  <div class="col col-xl-6">
    <div class="card">
      <div class="card-header text-center">
        <h3>🤦🏻‍♀️パスワードが忘れてしまいました！</h3>
      </div>
      <div class="card-body">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          </br>
          <div class="actions d-grid">
            <%= f.submit "Send me reset password instructions", class: "btn btn-white btn-lg btn3d" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
