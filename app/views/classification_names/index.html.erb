<p id="notice"><%= notice %></p>

<h1>Classification Names</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Order name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classification_names.each do |classification_name| %>
      <tr>
        <td><%= classification_name.content %></td>
        <td><%= classification_name.user_id %></td>
        <td><%= classification_name.order_name_id %></td>
        <td><%= link_to 'Show', classification_name %></td>
        <td><%= link_to 'Edit', edit_classification_name_path(classification_name) %></td>
        <td><%= link_to 'Destroy', classification_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

